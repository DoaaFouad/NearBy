<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/iv_shimmer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/shimmerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_shimmer_title"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/shimmerBackground"
        app:layout_constraintStart_toEndOf="@id/iv_shimmer"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_shimmer_desc"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/shimmerBackground"
        app:layout_constraintStart_toEndOf="@id/iv_shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_shimmer_title" />

</androidx.constraintlayout.widget.ConstraintLayout>